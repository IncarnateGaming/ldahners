{% extends 'base.html.twig' %}

{% block title %}List Featured Reviews{% endblock %}
{% block stylesheets %}
    {{ parent() }}
    <link rel="stylesheet" href="{{ asset('/style/Table.css') }}">
    <link rel="stylesheet" href="{{ asset('/style/TableLimiters.css') }}">
{% endblock %}

{% block body %}

    <h2>Current Featured Reviews</h2>
    <table class="inc-table inc-table-striped">
        <tr>
            <th>Edit Link</th>
            <th>Book</th>
            <th>Name</th>
            <th>Review</th>
            <th>Link</th>
            <th>Delete Item</th>
        </tr>
        {% for item in review %}
            <tr>
                <td><a href="{{ path('app_admin_edit_review',{
                        id: item.id
                    }) }}"><button class="btn-success">Edit</button></a></td>
                <td>{{ item.Book.name }}</td>
                <td>{{ item.Name }}</td>
                <td><div class="td">{{ item.Review }}</div></td>
                <td><div class="td"><a href="{{ item.Hyperlink }}">{{ item.Hyperlink }}</a></div></td>
                <td><button class="btn-warning delete-button" data-delete="{{ path('app_admin_delete_review',{
                        id: item.id
                    }) }}" data-label="{{ item.Name }}">Delete</button></td>
            </tr>
        {% endfor %}
    </table>
{% endblock %}
{% block javascripts %}
    {{ parent() }}
    <script src="{{asset('packs/js/deleteButton.js')}}"></script>
{% endblock %}
